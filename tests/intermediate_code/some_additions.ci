program someAdditions {

     # declarations #

     declare i, x, y;

     input(x);	# 5 #
     input(y);  # 6 #

     i := 0;	# CSE UOI PCs' installed C doesn't support pre-initialized variables #

     while (i <> x)
     {
         y := x + y;
         i := i + 1;
     };

     print(y); # should be 31 #
     print(i); # should be 5  #

}.
